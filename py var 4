def reverse_string(s):
    # Базовый случай: пустая строка или строка из одного символа
    if len(s) <= 1:
        return s
    
    # Рекурсивный случай: 
    # 1. Сначала рекурсивно переворачиваем подстроку, начиная со второго символа (s[1:])
    # 2. К результату приписываем первый символ (s[0])
    return reverse_string(s[1:]) + s[0]

# Тестирование
my_string = "Hello"
print(f"Перевернутая строка: '{reverse_string(my_string)}'") 
