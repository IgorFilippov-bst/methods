def find_max(arr):
    # Базовый случай: массив из одного элемента
    if len(arr) == 1:
        return arr[0]
    
    # Рекурсивный случай:
    # arr[0] - первый элемент
    # arr[1:] - весь остальной массив (подмассив)
    max_of_rest = find_max(arr[1:])
    
    # Сравниваем первый элемент с максимумом остальной части
    return max(arr[0], max_of_rest)

# Тестирование
my_array = [10, 3, 25, 7, 1]
print(f"Массив: {my_array}")
print(f"Максимальный элемент: {find_max(my_array)}") 
