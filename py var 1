def sum_of_digits(n):
    # Базовый случай: когда число "исчезло", то есть стало 0
    if n == 0:
        return 0
    
    # Рекурсивный случай:
    # 1. Получаем последнюю цифру (n % 10)
    # 2. Прибавляем результат рекурсивного вызова для оставшегося числа (n // 10)
    else:
        return n % 10 + sum_of_digits(n // 10)

# Тестирование
number = 9314
print(f"Сумма цифр числа {number}: {sum_of_digits(number)}") 
